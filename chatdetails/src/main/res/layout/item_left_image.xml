<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="22dp">

    <TextView
        android:id="@+id/tv_header_time"
        style="@style/header_time_style" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/dip_13"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_10">

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="150dp"
                android:layout_height="240dp" />

            <com.github.lzyzsd.circleprogress.CircleProgress
                android:id="@+id/progress_load"
                android:layout_width="@dimen/dip_100"
                android:layout_height="@dimen/dip_100"
                android:layout_centerInParent="true" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_error"
            android:layout_width="@dimen/dip_24"
            android:layout_height="@dimen/dip_24"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dip_10"
            android:layout_marginRight="@dimen/dip_35"
            android:src="@drawable/aurora_send_msg_error" />

    </LinearLayout>

</LinearLayout>